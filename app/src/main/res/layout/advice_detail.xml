<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_clothes_for_03_age"
            android:transitionName="@string/imageToTransit"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clothesfor03child"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="23dp"
            android:textSize="23sp"
            android:textColor="#e5000000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/author_photo"
                android:id="@+id/author_photo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author_text_name"
                android:layout_toRightOf="@+id/author_photo"
                android:text="@string/author_name"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/author_text_name"
                android:layout_toRightOf="@+id/author_photo"
                android:text="@string/nataly_bortnikova_workplace"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#80000000"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nataly_bortnikova_speech"
            android:textSize="16sp"
            android:textColor="#e5000000"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/walk_with_child_header"
            android:textColor="#e5000000"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/walk_with_child"
            android:textSize="16sp"
            android:textColor="#e5000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:src="@drawable/ic_clothes_for_03_age1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="45dp"
            android:text="@string/choose_clothes_header"
            android:textSize="20sp"
            android:textColor="#e5000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:textColor="#e5000000"
            android:paddingBottom="35dp"
            android:text="@string/choose_clothes"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#e5e5e5"
            android:paddingLeft="16dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="@string/what_you_should_buy"
            android:textSize="20sp"
            android:textColor="#e5000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a000000">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ползунки"
                        android:textColor="#e5000000"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:id="@+id/polzunki_button_id"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-4 штуки"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="14sp"
                        android:textColor="#80000000"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <include
                layout="@layout/products_cards">
            </include>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ползунки"
                        android:textColor="#e5000000"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:id="@+id/polzunki_button_id"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-4 штуки"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="14sp"
                        android:textColor="#80000000"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <include
                layout="@layout/products_cards"></include>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ползунки"
                        android:textColor="#e5000000"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:id="@+id/polzunki_button_id"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-4 штуки"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="14sp"
                        android:textColor="#80000000"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <include
                layout="@layout/products_cards"></include>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/go_to_shopping"
                android:textSize="16sp"
                android:textColor="#e5000000"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>