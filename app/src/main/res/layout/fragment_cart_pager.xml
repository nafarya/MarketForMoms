<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="248dp"
    android:layout_height="104dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cart_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="main_tag"
            android:textAllCaps="true"
            android:textColor="#e5000000"
            android:textSize="12sp"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/cart_shop_shop_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="main_tag"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="#e5000000"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/cart_shop_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:text="sum"
            android:textAllCaps="true"
            android:textColor="#e5000000"
            android:textSize="20sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_pager_text_about_delivery"
            android:text="@string/final_cost_with_delivery"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="12sp"
            android:textColor="#80000000"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/final_cost"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="#e5000000"
            android:layout_marginLeft="16dp"
            android:layout_above="@+id/card_pager_text_about_delivery" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
