<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_list_price_id"
            android:textColor="#e5000000"
            android:text="249 Р"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/shop_list_price_id"
            android:id="@+id/delivery_icon"
            android:src="@drawable/ic_delivery_car_24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_list_price_id"
            android:layout_toRightOf="@id/delivery_icon"
            android:id="@+id/shop_list_date_id"
            android:text="26 августа"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_list_price_id"
            android:layout_toRightOf="@id/shop_list_date_id"
            android:id="@+id/shop_list_fee_id"
            android:text="бесплатно"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <Button
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:id="@+id/shop_list_add_To_Cart_Button"
            android:background="@color/colorPrimary"
            android:text="@string/addToCart"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/grey_line"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@+id/shop_list_add_To_Cart_Button"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/order_gray_hyphen"
            android:gravity="center_vertical|center_horizontal|center"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grey_line"
            android:id="@+id/shop_list_shop_name"
            android:text="Детский мир"
            android:textSize="16sp"
            android:textColor="#e5000000"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="1"
            android:layout_below="@id/grey_line"
            android:layout_toRightOf="@id/shop_list_shop_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            style="?android:attr/ratingBarStyleSmall"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
